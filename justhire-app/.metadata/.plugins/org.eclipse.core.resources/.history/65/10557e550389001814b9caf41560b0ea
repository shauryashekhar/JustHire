package com.wissen.justhire.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.wissen.justhire.model.Candidate;

public interface CandidateRepository extends JpaRepository<Candidate, Integer> {
	List<Candidate> findByStatus(String status);

	@Query("update Candidate c set c.status =:qq , c.score =:ss where c.candidateId =:id  ") // write query
	void updateStatusAndScore(@Param("qq") String address,@Param("ss") Float score, @Param("id")  int id);

}
